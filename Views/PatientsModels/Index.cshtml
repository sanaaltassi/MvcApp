@model IEnumerable<MvcApp.Models.PatientsModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Patients</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatientId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birthday)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) { 
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PatientId)
                </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Birthday)
            </td>
                
            <td>
                <a asp-controller="ExaminatonBookingModels" asp-action="Index" asp-route-id="@item.Id">Bookings</a> |
                <a asp-controller="PrescriptionsModels" asp-action="Index" asp-route-id="@item.Id">Prescriptions</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
